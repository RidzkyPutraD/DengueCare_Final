<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/cornerdetail_consul">

    <LinearLayout
        android:id="@+id/linearkonsul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/lah"
                android:src="@drawable/lah3"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/lah"
                android:fontFamily="@font/inter_bold"
                android:text="Ronaldowati\n\Vinicius Junior"
                android:textColor="#ffffff" />
            <TextView
                android:id="@+id/txtclose"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="X"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="About me"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:contentDescription="a"
                android:fontFamily="@font/inter_medium"
                android:text="Saya seorang dokter ahli demam berdarah yang berdedikasi untuk memberikan perawatan terbaik kepada pasien-pasien saya. Dengan latar belakang pendidikan medis yang kuat dan pengalaman klinis yang luas, saya berkomitmen untuk memahami dan mengelola setiap kasus demam berdarah dengan teliti."
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Achievements"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:contentDescription="a"
                android:fontFamily="@font/inter_medium"
                android:text="-  Pemimpin Tim Riset Klinis\n\u2022  Mengajar di lembaga-lembaga medis\n\u2022  Menerima penghargaan dari organisasi kesehatan\n\u2022  Terlibat aktif dalam organisasi kesehatan global"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>



</ScrollView>